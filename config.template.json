{
    "production":       false,
    "authentication":   false,
    "auth": {
        "host":     "http://127.0.0.1:9000",
        "token":    "xxx",
        "email":    "xxx@xxx.co.za",
        "appId":    "xxx"
    },
    "localwebserver": {
        "port": 2000
    },
    "mongodb": {
        "url":      "xxx",
        "database": "xxx"
    },
    "logger": {
        "appenders": {
            "reporting": {
                "type":         "file",
                "backups":      10,
                "filename":     "./logs/reporting.log",
                "absolute":     true,
                "maxLogSize":   102400
            }
        },
        "categories": {
            "default": {
                "appenders": [
                    "reporting"
                ],
                "level": "error"
            }
        }
    }
}